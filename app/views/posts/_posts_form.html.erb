<%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br>

    <%= f.label :content %>
    <%= f.text_area :content %><br>

    <%= f.label :blogger %>
    <%= f.collection_select :blogger_id, Blogger.all.sort, :id, :name %><br>

    <%= f.label :destination %>
    <%= f.collection_select :destination_id, Destination.all.sort, :id, :name %><br>

    <%= f.submit %>

<% end %>